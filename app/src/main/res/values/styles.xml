<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color_green</item>
        <item name="android:textColorSecondary">@color/text_color_black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="EditTextStyleBlack">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/text_color_grey</item>
        <item name="android:textSize">18sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/text_color_grey</item>
        <item name="colorControlActivated">@color/text_color_black</item>
    </style>

    <style name="ButtonStyleGreen">
        <item name="android:background">@color/button_background_green</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

</resources>
